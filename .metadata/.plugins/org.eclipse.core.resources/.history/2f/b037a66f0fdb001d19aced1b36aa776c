	private MemberRepository memberRepository = new MemberRepositorylmpl();
	
	
	public MemberController() {
		while (true) {
			System.out.println("0.뒤로 \t 1.회원조회 \t 2.회원등록 \t 3.회원수정 \t 4.회원삭제 \t 5.회원복구");
