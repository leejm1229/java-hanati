package com.hanati.library;

import java.sql.Connection;
import java.sql.Date;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Calendar;

import com.hanati.library.domian.model.Member;

public class Main {

	public static void main(String[] args) {
//		MainController mainController = new MainController();
		SimpleDateFormat dateFormat = new SimpleDateFormat("yyyy-MM-dd");
		ArrayList<Member> memberList = new ArrayList<>();
		Connection conn = null;
		PreparedStatement pstmt = null;
		ResultSet rs = null;

		String driver = "oracle.jdbc.driver.OracleDriver";
		String url = "jdbc:oracle:thin:@192.168.119.119:1521:dink";
		String user = "scott";
		String password = "tiger";
		String sql = "SELECT * FROM MEMBER";

		try {
			Class.forName(driver);
			System.out.println("jdbc driver 로딩 성공");
			conn = DriverManager.getConnection(url, user, password);
			System.out.println("오라클 연결 성공");

			pstmt = conn.prepareStatement(sql);
			rs = pstmt.executeQuery();

			// 결과를 ArrayList에 담기
			while (rs.next()) {
				int id = rs.getInt("id");
				String name = rs.getString("name");
				Date signupDay = rs.getDate("signupday");
				String formattedSignupDay = dateFormat.format(signupDay);
				String address = rs.getString("address");
				String phoneNumber = rs.getString("phonenumber");
				Date birthday = rs.getDate("birthday");
				String formattedBirthDay = dateFormat.format(birthday);
				Calendar signupCal = Calendar.getInstance();
			    signupCal.setTime(signupDay);
			    int signupYear = signupCal.get(Calendar.YEAR);

			    Calendar birthCal = Calendar.getInstance();
			    birthCal.setTime(birthday);
			    int birthYear = birthCal.get(Calendar.YEAR);

			    int age = signupYear - birthYear + 1;
				Member member = new Member(id, name, formattedSignupDay, address, phoneNumber, formattedBirthDay, age);
				memberList.add(member);
			}
		} catch (ClassNotFoundException e) {
			System.out.println("jdbc driver 로딩 실패");
		} catch (SQLException e) {
			System.out.println("오라클 연결 실패");
		}
		for (Member member : memberList) {
			System.out.println("[id : " + member.getId() + "\t" + "이름 : " + member.getName() + "\t" + "가입날짜 : "
					+ member.getSignUpDay() + "\t" + "주소 : " + member.getAddress() + "\t" + "전화번호 : "
					+ member.getPhoneNumber() + "\t" + "생일 : " + member.getBirthday() + "\t\t" + "나이 : "
					+ member.getAge() + "]");
		}
	}
	
	
}
