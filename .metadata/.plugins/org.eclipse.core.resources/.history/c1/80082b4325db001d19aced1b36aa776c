	private MemberRepository memberRepository = new MemberRepositorylmpl();
	
	
	public MemberController() {
		memberList = memberRepository.loadMember();
		while (true) {
			System.out.println("0.뒤로 \t 1.회원조회 \t 2.회원등록 \t 3.회원수정 \t 4.회원삭제 \t 5.회원복구");
			int num = scanner.nextInt();
			if (num == 1) {
				printMemberList();
			} else if (num == 2) {
				addMember();
			} else if (num == 3) {
				updateMember();
			} else if (num == 4) {
				deleteMemeber();
			} else if (num == 5) {
				rollback();
			} else if (num == 0) {
				break;
			} else {
				System.out.println("메뉴버튼을 다시 클릭해주세요.");
			}
		}
	}

	public void printMemberList() {
