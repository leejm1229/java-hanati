	@Override
	public void readBook(List<Book> bookList) {
		for (Book book : bookList) {
			System.out.println("id : " + book.getId() + "\t" + "제목 : " + book.getTitle() + "\t" + "출간일 : "
					+ book.getPublishDate() + "\t" + "대출가능(반납여부) : " + book.getIsReturned());
		}

	}

